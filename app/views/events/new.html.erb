<!-- form working old way -->

  <div class="main-container">
    <div class="card-show">
      <h1>New alert</h1>
      <%= simple_form_for @event do |f| %>
        <%= f.fields_for :search do |search_form|  %>
          <div class="form-inputs">
            <div class="input-login">
              <%= search_form.input :continent, collection: Collaborator.distinct.pluck(:continent) %>
                <%= search_form.input :country, as: :select, collection: Collaborator.distinct.pluck(:country) %>
                <%= search_form.input :city, collection: Collaborator.distinct.pluck(:city) %>
              <% end  %>
              <%= f.fields_for :template do |template_form| %>
                <%= template_form.input :description, as: :text,
                placeholder:"Your SMS here"%>
              <% end %>
            </div>
          </div>
        <div class="form-actions">
          <%= f.submit "Send", class: "btn-main" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
