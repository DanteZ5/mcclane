<div class="container">

  <!-- Navigation -->
 <%= render 'nav_events' %>


  <!-- Form with tags input-->
  <div class="main-container">
    <div class="card-show">

     <h1>New alert</h1>


      <%= simple_form_for @event do |f| %>
        <div class="alert-step active">
          <%= f.fields_for :search do |search_form|  %>
            <div class="form-group">
              <%= select_tag "continent2", options_from_collection_for_select(@continents, :name, :name), class: 'select2-continent form-control', multiple: "multiple", label: "Continent" %>
            </div>

            <div class="form-group">
              <%= select_tag "Country2", options_from_collection_for_select( @countries, :name, :name), class: 'select2-country form-control', multiple: "multiple" %>
            </div>

            <div class="form-group">
              <%= select_tag "city2", options_from_collection_for_select(
              @cities, :name, :name),
              class: 'select2-city form-control', multiple: "multiple" %>
            </div>

          <% end  %>
          <button class="btn btn-main" id="switcher"> Write your alert</button>
        </div>

        <div class="alert-step">
          <%= f.fields_for :template do |template_form| %>
            <%= template_form.input :description, as: :text, placeholder:"Your SMS here"%>
          <% end %>

          <div class="form-actions">
            <%= f.submit "Send", class: "btn-main" %>
            <% end %>
        </div>

          </div>
        </div>
      </div>
    </div>
