<div class="container">
  <!-- Navigation -->
  <%= render 'nav_events' %>

  <div class="alert-step active">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="card-show">
          <h1 style="text-align: center;">Create a new alert</h1>

          <div class="targeter">
            <p>To sens a new SMS alert to your collaborators, select them with the tags below</p>

            <%= simple_form_for @event do |f| %>
            <%= f.fields_for :search do |search_form|  %>

            <div class="form-group">
              <%= select_tag "area", options_from_collection_for_select(@continents + @countries + @cities, :name, :name), class: 'select2-area form-control tgt', multiple: true, label: "continent, country, city"%>
            </div>
          </div>
          <!-- Input SMS part of the form -->

          <% end  %>

          <button class="btn btn-main btn-absolute" id="switcher"> Write your alert</button>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="card-show" style="padding: 25px;">
          <h1 style="text-align: center;">Send to: <span id="collaborators-count"><%= current_user.collaborators.count  %></span>  collaborators</h1>
          <div id="men">
            <% current_user.collaborators.count.times do %>
            <i class='fas fa-user'></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="alert-step">
      <div class="col-xs-12 col-sm-6">
        <div class="card-show" style="padding: 25px;">
          <h1>Write your alert message</h1>
              <p>Be explicit and remain under 160 characters</p>
              <%= f.fields_for :template do |template_form| %>
              <%= template_form.input :description, as: :text, label: false,
              input_html: { value:"An [EVENT PLEASE COMPLETE] occured, please answer '1' if you're safe" } %>
              <% end %>

              <div class="form-actions">
                <%= f.submit "Send", class: "btn-main btn-absolute", data: { confirm: 'Do you really want to send this message?' } %>
                <% end %>
            </div>
        </div>
      </div>
    <div class="col-xs-12 col-sm-6">
        <div class="card-show" style="padding: 25px;">
        <%#= image_tag "phone.png", class: "phone" %>
      <div class="mess">
        <div class="he"><span class="left">Messages</span>
          <span class="name">McClane</span><span class="right">Contact</span>
        </div>
        <div class="messages-wrapper">
          <br>
          <div class="message to" style="text-align: right;">An [EVENT PLEASE COMPLETE] occured, please answer '1' if you're safe</div>
          <br><br><br><br><br><br><br><br><br><br><br>
          <br>
        </div>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>
