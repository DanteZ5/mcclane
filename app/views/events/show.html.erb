<div class="container">
  <h1>EVENTS INDEX</h1>

  <!-- Progress bar -->

  <div class="progress" style="height: 100px;">
    <div class="progress-bar bg-success" role="progressbar" style="width: 10%; padding: 0px 20px; display: flex; align-items: center;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">Safe: 1/3</div>
    <div class="progress-bar bg-warning" role="progressbar" style="width: 90%; display: flex; padding: 0px 20px; align-items: center;" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">Pending: 2/3</div>
  </div>

  <!-- Filters and edit message -->
  <div class="input-group mb-3 input-search">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroup-sizing-default"></span>
    </div>
    <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Search">
    <button class="btn btn-danger">Edit messages</button>
  </div>

  <!-- Collaborators table with inline status -->
  <div class="table-space">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Last name</th>
          <th scope="col">First name</th>
          <th scope="col">Status</th>
          <th scope="col">Tags</th>
          <th scope="col" colspan="2" style="text-align: center;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr class="bg-success">
          <td>Rufin</td>
          <td>Maximilien</td>
          <td>Safe</td>
          <td>France, IDF, Paris</td>
          <td colspan="2" class="actions-icons"><%= link_to "", "#", class: "fas fa-eye white" %><%= link_to "", "#", class: "fas fa-exchange-alt white" %><%= link_to "", "#", class: "fas fa-envelope white" %></td>
        </tr>
        <tr class="bg-warning">
          <td>Vuitton</td>
          <td>Thibaud</td>
          <td>Pending</td>
          <td>France, IDF, Paris</td>
          <td colspan="2" class="actions-icons"><%= link_to "", "#", class: "fas fa-eye white" %><%= link_to "", "#", class: "fas fa-exchange-alt white" %><%= link_to "", "#", class: "fas fa-envelope white" %></td>
        </tr>
        <tr class="bg-warning">
          <td>Mezouar</td>
          <td>Nassim</td>
          <td>Pending</td>
          <td>France, IDF, Paris</td>
          <td colspan="2" class="actions-icons"><%= link_to "", "#", class: "fas fa-eye white" %><%= link_to "", "#", class: "fas fa-exchange-alt white" %><%= link_to "", "#", class: "fas fa-envelope white" %></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
