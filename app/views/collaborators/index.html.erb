<%= flash[:notice] %>
<br>
<div class="container-fluid" style="margin: 10px;">
  <h1 style="text-align: center;">Collaborator's index</h1>
  <div class="card-show pull-right">
    <h4>Import new collaborators</h4>
    <%= form_tag import_collaborators_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV", class:"btn-main" %>
    <%= link_to "Add a collaborator", new_collaborator_path, class:"btn-main" %>
    <% end %>
  </div>
  <div class="form-group pull-down">
    <input type="text" class="search form-control" placeholder="Filter">
  </div>
  <span class="counter pull-left"></span>
  <div class="table-space" style="margin: 0px auto">
    <table class="table table-dark table-hover results table-responsive">
      <thead>
        <tr>
          <th scope="col" class="center-headers">Email</th>
          <th scope="col" class="center-headers">Professional number</th>
          <!-- <th scope="col" class="center-headers">Personnal number</th> -->
          <th scope="col" class="center-headers">First name</th>
          <th scope="col" class="center-headers">Last name</th>
          <th scope="col" class="center-headers">Continent</th>
          <th scope="col" class="center-headers">Country</th>
          <th scope="col" class="center-headers">City</th>
          <th scope="col" class="center-headers">Edit</th>
          <th scope="col" class="center-headers">Delete</th>
        </tr>
        <tr class="warning no-result">
          <td colspan="8"><i class="fa fa-warning"></i> No result</td>
        </tr>
      </thead>
      <tbody>
        <% @collaborators.each do |collaborator| %>
        <tr>
          <td class="center-headers"><%= collaborator.email %></td>
          <td class="center-headers"><%= collaborator.phone_pro %></td>
        <!--   <td class="center-headers"><%= collaborator.phone_perso %></td> -->
          <td class="center-headers"><%= collaborator.first_name %></td>
          <td class="center-headers"><%= collaborator.last_name %></td>
          <td class="center-headers"><%= collaborator.continent %></td>
          <td class="center-headers"><%= collaborator.country %></td>
          <td class="center-headers"><%= collaborator.city %></td>
          <td style="text-align: center;"><%= link_to "", edit_collaborator_path(collaborator), class: "fas fa-pencil-alt" %></td>
          <td style="text-align: center;"><%= link_to "", collaborator_path(collaborator.id), class: "fas fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
