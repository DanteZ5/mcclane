<div class="modal fade position" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit messages for</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="cardmodal-body main-container">
        <%= simple_form_for @event, url: edit_messages_event_path(@event) do |f| %>
          <%= f.fields_for :templates, @event.templates.sort_by(&:order) do |template_form| %>
            <%= template_form.input :content %>
          <% end %>
          <%= f.submit "Set", class: "btn-main", data: { confirm: 'Do you really want to edit this message?' } %>
        <% end %>
      </div>
      <div class="modal-footer">
      <button class="btn-main">Confirm</button>
      </div>
    </div>
  </div>
</div>
