<div class="modal fade position" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit messages for</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body edit-messages" style="text-align: center;">
        <%= simple_form_for event, url: edit_messages_event_path(event) do |f| %>
          <%= f.fields_for :templates, templates do |template_form| %>
            <%= template_form.input :content, as: :text, label: template_labels[template_form.object.order] %>
          <% end %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Set", class: "btn-main", data: { confirm: 'Do you really want to edit this message?' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
