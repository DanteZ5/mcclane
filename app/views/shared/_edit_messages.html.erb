<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit new message for <%= @event.name %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="cardmodal-body main-container">
        <%= simple_form_for @event do |f| %>
          <%= f.fields_for :template do |template_form| %>
            <%= template_form.input :description, as: :text, input_html: { value:"There has been a [EVENT] please answer 1 to indicate you're safe." } %>
            <%= template_form.input :timer, collection: 1..60 %>
            <%= f.submit "Set", class: "btn-main", data: { confirm: 'Do you really want to send this message?' } %>
            <% end %>
          <% end %>
          <br>
          <button type="button" class="btn-main" data-toggle="collapse" data-target="#toggle-pane-88">Set more</button>
          <br>
                  <div id="toggle-pane-88" class="collapse">
                    <%= simple_form_for @event do |f| %>
                      <%= f.fields_for :template do |template_form| %>
                        <%= template_form.input :description, as: :text, input_html: { value:"There has been a [EVENT] please answer 1 to indicate you're safe." } %>
                        <%= template_form.input :timer, collection: 1..60 %>
                        <%= f.submit "Set", class: "btn-main", data: { confirm: 'Do you really want to send this message?' } %>
                        <% end %>
                    <% end %>
                  </div>
      </div>
      <div class="modal-footer">
      <button class="btn-main">Confirm</button>
      </div>
    </div>
  </div>
</div>
