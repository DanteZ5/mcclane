<div class="modal fade" id="exampleModalSMS<%= collaborator.id  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Send <%= collaborator.first_name %> <%=collaborator.last_name  %> a new message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
         <%= simple_form_for @event do |f| %>
         <%= f.fields_for :template do |template_form| %>
         <%= template_form.input :description, as: :text, placeholder:"Are you ok #{collaborator.first_name} #{collaborator.last_name}?" %>
         <% end %>

         <div class="mess">
          <div class="he"><span class="left">Messages</span>
            <span class="name">McClane</span><span class="right">Contact</span>
          </div>
          <div class="messages-wrapper">
            <br>
            <div class="message to" style="text-align: right;">...</div>
            <br><br><br><br><br><br><br><br><br><br><br><br>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Send", class: "btn-main" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
